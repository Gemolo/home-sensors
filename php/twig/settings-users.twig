{% set active = "users" %}
{% extends 'base-settings.twig' %}
{% block settings %}
    {# TODO #}
    {# 1. cancellazione utente #}
    {# 2. edit profilo personale #}
    {# 3. aggiunta utente da admin #}
    <h1>Add a user</h1>
    <a href="users/add" class="btn btn-primary">Add user now</a>
    <h2>Generate user token</h2>

    <select id="tokenHours" class="custom-select custom-select-sm">
        <option value="1">1 hour</option>
        <option value="6">6 hours</option>
        <option value="12">12 hours</option>
        <option value="24">1 day</option>
        <option value="72">3 days</option>
        <option value="168">7 days</option>
    </select>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="tokenAdmin">
        <label class="form-check-label" for="tokenAdmin">Will be admin</label>
    </div>
    <button class="btn btn-primary" onclick="generateToken()">Generate add user token</button>
    <input id="tokenText" style="display: none" type="text" disabled class="form-control">

    <h1>Users</h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Is admin</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <th scope="row">{{ u.id }}</th>
                <td>{{ u.username }}</td>
                <td>{{ u.email }}</td>
                <td>{{ u.name }}</td>
                <td>{% if u.isAdmin %} Yes {% else %} No {% endif %}</td>
                <td>
                    <form action="users/{{ u.id }}/edit" method="get">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        function generateToken() {
            let hours = $('#tokenHours').val();
            let admin = $('#tokenAdmin').is(":checked");
            console.log(admin);
            $.ajax({
                type: 'POST',
                url: '{{ root }}/api/generate_register_token',
                data: {
                    'hours': hours,
                    'will_be_admin': admin
                },
                success: function (r) {
                    $('#tokenText').css('display', 'block').val('{{ root }}/register?token=' + encodeURIComponent(JSON.parse(r)));
                }
            });
        }
    </script>
{% endblock %}