{% set page = 'settings' %}
{% extends 'base-logged-page.twig' %}
{% block content %}
    <div id="settings">
        <ul class="list-group">
            {% macro row(id, name, root, active) %}
                {% if id == active %}
                    {% set cls = "active" %}
                {% else %}
                    {% set cls = "" %}
                {% endif %}
                <a href="{{ root }}/settings/{{ id }}" class="list-group-item list-group-item-action {{ cls }}">{{ name }}</a>
            {% endmacro %}
            {{ _self.row('users', 'User', root, active) }}
            {{ _self.row('categories', 'Categories', root, active) }}
            {{ _self.row('sensors', 'Sensors', root, active) }}
        </ul>
    </div>
    <div id="settings_content">
        {% block settings %}
        {%  endblock %}
    </div>
    <style>
        #settings {
            width: 100%;
        }
        #settings_content {
            margin-top: 16px;
        }
        @media (min-width: 768px) {
            #settings{
                width: 200px;
            }

            #settings_content {
                margin-top: 0;
                margin-left: 16px;
                width: 600px;
            }

            .content {
                display: flex;
                width: 100%;
            }
        }
    </style>
{% endblock %}