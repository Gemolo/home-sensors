{% extends 'base-logged-page.twig' %}
{% block content %}
    <h1>Do you confirm you want to delete this user?</h1>
    <h3>Username: {{ user.username }}</h3>
    <h3>Email: {{ user.email }}</h3>

    <form method="POST" action="?">
        <input type="hidden" value="{{ user.id }}">
        <input class="btn btn-primary btn-red" type="submit" value="I'm sure, delete">

        <a class="btn btn-primary btn-gray" href="{{ back_page }}">Cancel</a>
    </form>
{% endblock %}